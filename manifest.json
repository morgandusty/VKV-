{
"update_url": "https://clients2.google.com/service/update2/crx",

   "background": {
      "page": "back.html"
   },
   "browser_action": {
      "default_icon": "img/ico_32.png",
      "default_title": "VKV"
   },
   "content_security_policy": "script-src 'self' https://vk.com; object-src 'self'",
   "content_scripts": [ {
      "js": [ "js/page.js" ],
      "matches": [
			"https://vk.com/*",
			"https://oauth.vk.com/*",
			"https://ulogin.ru/auth.php*" 
		],
      "run_at": "document_start"
   } ],
   "description": "Автоматический обмен просмотрами постов вконтакте без банов. Это позволяет накрутить просмотры бесплатно.",
   "externally_connectable": {
		"matches": [
			"https://vk.com/*", 
			"https://oauth.vk.com/*",
			"https://crazy-like.ru/*",
			"https://ulogin.ru/*"
		]
	},
   "icons": {
      "128": "img/ico_128.png",
      "32": "img/ico_32.png",
      "48": "img/ico_48.png"
   },
   "manifest_version": 2,
   "name": "VKV: Обмен просмотрами вконтакте",
   "permissions": [ 
		"tabs", 
		"storage",
		"https://vk.com/*",
		"https://oauth.vk.com/*",
		"https://crazy-like.ru/*",
		"https://ulogin.ru/*"
	],
   "short_name": "VKV",
   "version": "2.5.1",
   "web_accessible_resources": [ "img/*", "css/*", "js/*" ]
}
